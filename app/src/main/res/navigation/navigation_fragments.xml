<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.bignerdranch.android.bookz.ui.home.HomeFragment"
        android:label="@string/homeNav"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_messages"
        android:name="com.bignerdranch.android.bookz.ui.messages.MessagesFragment"
        android:label="@string/messagesNav"
        tools:layout="@layout/fragment_messages" />

    <fragment
        android:id="@+id/navigation_users"
        android:name="com.bignerdranch.android.bookz.ui.users.UsersFragment"
        android:label="@string/messagesNav"
        tools:layout="@layout/fragment_users" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.bignerdranch.android.bookz.ui.profile.ProfileFragment"
        android:label="@string/profileNav"
        tools:layout="@layout/fragment_profile" />
</navigation>